{% extends 'base.html.twig' %}

{% block title %}Order index{% endblock %}

{% block body %}
    <div class='section vh-100 section d-flex flex-column  align-items-center'>
    <h1 class='mt-5'>Ordini</h1>
    <a href="{{ path('order_new') }}" class='btn btn-success mt-5 mb-5'>Aggiungi ordini</a>
    {{ include('_formsearch.html.twig') }}
    <table class="table table-dark w-75">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>OrderNumber</th>
                <th>Company</th>
                <th>Price</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for order in orders %}
            <tr>
                <td>{{ order.id }}</td>
                <td>{{ order.name }}</td>
                <td>{{ order.orderNumber }}</td>
                <td>{{ order.company }}</td>
                <td>{{ order.price }}</td>
                <td class='w-25'>
                    <a href="{{ path('order_show', {'id': order.id}) }} class="btn btn-info"">show</a>
                    <a href="{{ path('order_edit', {'id': order.id}) }} class="btn btn-warning"">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
