{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}

    <div class='section vh-100 section d-flex flex-column  align-items-center'>
        <div class='navtab mt-5'>
        <h1 class='block'>Dipendenti</h1>
        <div class='block'>{{ include('_formsearch.html.twig') }}</div>
        <a class='block tablebutton'href="{{ path('user_new') }}" >Create new</a> 
        
        
        
        </div>
        <table class="mytab">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Email</th>
                    <th scope="col">Roles</th>
                    <th scope="col">Password</th>
                    {# <th scope="col">Password</th> #}
                </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                    <td>***</td>
                    <td>
                        <a href="{{ path('user_show', {'id': user.id}) }}" class="tablebutton">show</a>
                        <a href="{{ path('user_edit', {'id': user.id}) }}" class="tablebutton" >edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    
{% endblock %}