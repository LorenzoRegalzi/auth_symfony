{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}

    <div class='section vh-100 section d-flex flex-column  align-items-center'>
    <h1 class='mt-5'>Dipendenti</h1>
       <a href="{{ path('user_new') }}" class='btn btn-success mt-5 mb-5'>Create new</a> 
     {{ include('_formsearch.html.twig') }}
        <table class="table table-dark w-75">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Email</th>
                    <th scope="col">Roles</th>
                    <th scope="col">Password</th>
                    {# <th scope="col">Password</th> #}
                    <th scope="col">website</th>
                    <th scope="col">details</th>
                </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                    <td>***</td>
                    <td>{{ user.website }}</td>
                    <td>{{ user.details }}</td>
                    <td>
                        <a href="{{ path('user_show', {'id': user.id}) }}" class="btn btn-info">show</a>
                        <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-warning" >edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    
{% endblock %}