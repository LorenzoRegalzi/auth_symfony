<form method="post" action="{{ path('user_delete', {'id': user.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input class="tablebutton" type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
    <button class="tablebutton mt-3">Delete</button>
</form>
