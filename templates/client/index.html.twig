{% extends 'base.html.twig' %}

{% block title %}Client index{% endblock %}

{% block body %}
    <div class='section vh-100 section d-flex flex-column  align-items-center'>

    <div class='navtab mt-5'>
        <h1 class='block'>Clienti</h1>
        <div class='block'> {{ include('_formsearch.html.twig') }}</div>
        <a class='block tablebutton'href="{{ path('client_new') }}" >Create new</a>  
    </div>
    <table class="mytab">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Place</th>
                <th scope="col">Status</th>
                <th scope="col">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for client in clients %}
            <tr>
                <td>{{ client.id }}</td>
                <td>{{ client.name }}</td>
                <td>{{ client.place }}</td>
                <td>{{ client.status }}</td>
                <td class='w-25'>
                    <a href="{{ path('client_show', {'id': client.id}) }}" class="tablebutton">show</a>
                    <a href="{{ path('client_edit', {'id': client.id}) }}" class="tablebutton">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
    
{% endblock %}
