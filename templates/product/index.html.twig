{% extends 'base.html.twig' %}

{% block title %}Product index{% endblock %}

{% block body %}

    <div class='section vh-100 section d-flex flex-column  align-items-center'>

     <div class='navtab mt-5'>
        <h1 class='block'>Prodotti</h1>
        <div class='block'>{{ include('_formsearch.html.twig') }}</div>
        <a class='block tablebutton'href="{{ path('product_new') }}" >Create new</a>  
    </div>

    <table class="mytab">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Price</th>
                <th scope="col">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.price }}</td>
                <td class='w-25'>
                    <a href="{{ path('product_show', {'id': product.id}) }}" class="tablebutton">show</a>
                    <a href="{{ path('product_edit', {'id': product.id}) }}" class="tablebutton">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
   
{% endblock %}
